<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.game.play.CatchCatFragment">

    <TextView
        android:id="@+id/tv_counter_found_cats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/iv_box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/iv_box"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_back_to_menu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/back_to_menu"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_close_game"
        app:layout_constraintStart_toStartOf="@+id/btn_close_game"
        app:layout_constraintTop_toBottomOf="@+id/iv_box" />

    <Button
        android:id="@+id/btn_close_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/close_the_game"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_back_to_menu" />


</androidx.constraintlayout.widget.ConstraintLayout>